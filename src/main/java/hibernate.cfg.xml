<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="dialect">org.hibernate.dialect.PostgreSQL10Dialect</property>
        <property name="connection.url">jdbc:postgresql://localhost/broozerCruiser</property>

        <mapping class="com.nelisriebezos.broozercruiserbot.domain.Car"/>
        <mapping class="com.nelisriebezos.broozercruiserbot.domain.TankSession"/>
        <mapping class="com.nelisriebezos.broozercruiserbot.domain.Chauffeur"/>
        <mapping class="com.nelisriebezos.broozercruiserbot.domain.Rit"/>
    </session-factory>
</hibernate-configuration>
